#!/usr/bin/env bash
# Copyright (c) 2011 Concurrent, Inc.

if [ -z "$MT_PATH" ]
then
  if [ -h $0 ]
  then
    cd `dirname $0`
    MT_PATH=`basename $0`

    while [ -h "$MT_PATH" ]
    do
      MT_PATH=`readlink $MT_PATH`
      cd `dirname $MT_PATH`
      MT_PATH=`basename $MT_PATH`
    done
    
    MT_PATH=`cd .. && pwd -P`
  else
    MT_PATH=`dirname $0`/..
    MT_PATH=`cd $MT_PATH && pwd -P`
  fi
fi

MODULES_ROOT=$MT_PATH/bin/functions
for dep in $MT_PATH/bin/functions/_*.inc; do . $dep; done

module_depends run update install uninstall help command version

multitool_run ()
{
  while [ $# -gt 0 ]
  do
    case "$1" in
      -q|--quiet)
        mt_log_verbose=
        ;;
      -nc|--no-color|--no-colour)
        mt_log_use_color=
        ;;
      *)
        extracted_opts="$extracted_opts$1 "
        ;;
    esac
    shift
  done
  
  route_perform $extracted_opts
}

multitool_run $@
